?>
    <script  type="text/javascript">
        var $ = function (id) {
            return document.getElementById(id);
        }

        function deleteRecord($action, $name, $link){            
            if(confirm("Are you sure you want to " + $action + " this " + $name + " ?")){
                window.open($link, "_top");
            }
        }
